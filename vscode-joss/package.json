{
  "name": "joss-language",
  "displayName": "JosSecurity Language Support",
  "description": "Advanced language support for JosSecurity with LSP, go-to-definition, hover, diagnostics, and security analysis",
  "version": "3.3.0",
  "icon": "images/icon.png",
  "publisher": "jossecurity",
  "engines": {
    "vscode": "^1.82.0"
  },
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:joss",
    "onLanguage:joss-html",
    "onCommand:joss.newProject"
  ],
  "categories": [
    "Programming Languages",
    "Snippets",
    "Linters"
  ],
  "keywords": [
    "joss",
    "jossecurity",
    "security",
    "web",
    "backend",
    "lsp",
    "remove:crud"
  ],
  "contributes": {
    "languages": [
      {
        "id": "joss",
        "aliases": [
          "JosSecurity",
          "joss"
        ],
        "extensions": [
          ".joss"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "joss-html",
        "aliases": [
          "JosSecurity HTML",
          "joss-html"
        ],
        "extensions": [
          ".joss.html"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "joss",
        "scopeName": "source.joss",
        "path": "./syntaxes/joss.tmLanguage.json"
      },
      {
        "language": "joss-html",
        "scopeName": "text.html.joss",
        "path": "./syntaxes/joss-html.tmLanguage.json",
        "embeddedLanguages": {
          "source.joss": "joss"
        }
      }
    ],
    "snippets": [
      {
        "language": "joss",
        "path": "./snippets/joss.json"
      }
    ],
    "themes": [
      {
        "label": "JosSecurity Dark",
        "uiTheme": "vs-dark",
        "path": "./themes/joss-dark.json"
      }
    ],
    "commands": [
      {
        "command": "joss.indexWorkspace",
        "title": "Joss: Index Workspace"
      },
      {
        "command": "joss.goToRoute",
        "title": "Joss: Go to Route"
      },
      {
        "command": "joss.createController",
        "title": "Joss: Make Controller"
      },
      {
        "command": "joss.runSecurityCheck",
        "title": "Joss: Run Security Check"
      },
      {
        "command": "joss.openDefinition",
        "title": "Joss: Open Definition"
      },
      {
        "command": "joss.restartServer",
        "title": "Joss: Restart Language Server"
      },
      {
        "command": "joss.newProject",
        "title": "Joss: New Project"
      },
      {
        "command": "joss.makeModel",
        "title": "Joss: Make Model"
      },
      {
        "command": "joss.makeCRUD",
        "title": "Joss: Make CRUD"
      },
      {
        "command": "joss.removeCRUD",
        "title": "Joss: Remove CRUD"
      },
      {
        "command": "joss.makeMigration",
        "title": "Joss: Make Migration"
      },
      {
        "command": "joss.migrate",
        "title": "Joss: Run Migrations"
      },
      {
        "command": "joss.serverStart",
        "title": "Joss: Start Server"
      },
      {
        "command": "joss.changeDbPrefix",
        "title": "Joss: Change DB Prefix"
      },
      {
        "command": "joss.changeDbEngine",
        "title": "Joss: Change DB Engine"
      },
      {
        "command": "joss.userstorage",
        "title": "Joss: Configure User Storage"
      },
      {
        "command": "joss.makeView",
        "title": "Joss: Make View"
      },
      {
        "command": "joss.makeMVC",
        "title": "Joss: Make MVC"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "JosSecurity",
      "properties": {
        "joss.indexOnOpen": {
          "type": "boolean",
          "default": true,
          "description": "Automatically index workspace when opening a .joss file"
        },
        "joss.enableJosSecurity": {
          "type": "boolean",
          "default": true,
          "description": "Enable security analysis"
        },
        "joss.controllerPaths": {
          "type": "array",
          "default": [
            "app/controllers",
            "app/Controllers"
          ],
          "description": "Paths to search for controllers"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/fast-levenshtein": "^0.0.4",
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vscode/vsce": "^2.15.0",
    "eslint": "^8.0.0",
    "typescript": "^5.0.0",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "fast-levenshtein": "^3.0.0",
    "level": "^8.0.0",
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.11",
    "vscode-uri": "^3.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jossecurity/joss"
  },
  "license": "MIT"
}
